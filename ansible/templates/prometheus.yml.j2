global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'node_exporters'
    static_configs:
      - targets:
{% for h in groups['monitoring_nodes'] | default([]) %}
        - '{{ h }}:9100'
{% endfor %}
{% for h in groups['storage_nodes'] | default([]) %}
        - '{{ h }}:9100'
{% endfor %}
{% for h in groups['compute_nodes'] | default([]) %}
        - '{{ h }}:9100'
{% endfor %}

  - job_name: 'podman_system_metrics'
    static_configs:
      - targets:
{% if enable_podman_exporters | default(true) %}
{% for h in groups['monitoring_nodes'] | default([]) %}
        - '{{ h }}:{{ podman_system_metrics_host_port }}'
{% endfor %}
{% for h in groups['storage_nodes'] | default([]) %}
        - '{{ h }}:{{ podman_system_metrics_host_port }}'
{% endfor %}
{% for h in groups['compute_nodes'] | default([]) %}
        - '{{ h }}:{{ podman_system_metrics_host_port }}'
{% endfor %}
{% endif %}

  - job_name: 'podman_exporter'
    static_configs:
      - targets:
{% if enable_podman_exporters | default(true) %}
{% for h in groups['monitoring_nodes'] | default([]) %}
        - '{{ h }}:9300'
{% endfor %}
{% for h in groups['storage_nodes'] | default([]) %}
        - '{{ h }}:9300'
{% endfor %}
{% for h in groups['compute_nodes'] | default([]) %}
        - '{{ h }}:9300'
{% endfor %}
{% endif %}

# Red Hat Quay metrics integration (optional)
{% if enable_quay_metrics | default(false) %}
  - job_name: 'quay_metrics'
    static_configs:
      - targets: 
{% if quay_instance_url is defined %}
        - '{{ quay_instance_url }}'
{% else %}
        - 'quay.io'
{% endif %}
    metrics_path: '/metrics'
    scheme: https
    scrape_interval: 30s
    scrape_timeout: 10s
    honor_labels: true
{% endif %}

