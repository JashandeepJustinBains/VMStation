# Additional Container Registries Configuration
# Generated by Ansible for VMStation Quay integration

# Maintain compatibility with existing unqualified searches
unqualified-search-registries = ["docker.io", "quay.io"]

# Local registry configuration (existing)
[[registry]]
prefix = "{{ local_registry_host | default('192.168.4.63') }}:{{ local_registry_port | default('5000') }}"
location = "{{ local_registry_host | default('192.168.4.63') }}:{{ local_registry_port | default('5000') }}"
insecure = true

# Additional registries configuration
{% if container_registries is defined %}
{% for registry in container_registries %}
[[registry]]
prefix = "{{ registry.url }}"
location = "{{ registry.url }}"
{% if registry.insecure | default(false) %}
insecure = true
{% endif %}

{% endfor %}
{% endif %}