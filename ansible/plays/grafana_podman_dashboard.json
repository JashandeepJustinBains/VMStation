{
  "id": null,
  "title": "Podman Overview",
  "tags": ["podman", "containers"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "graph",
      "title": "Container CPU Usage (sum by instance)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total[5m])) by (instance)",
          "legendFormat": "{{instance}}"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "graph",
      "title": "Container Memory Usage (sum by instance)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes) by (instance)",
          "legendFormat": "{{instance}}"
        }
      ],
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "logs",
      "title": "Podman Stats Logs (Loki)",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "{job=\"varlogs\"}",
          "refId": "A"
        }
      ],
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8}
    }
  ]
}
