{
  "id": null,
  "title": "Loki Logs Overview",
  "tags": ["loki", "logs"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "System Logs",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "{job=\"varlogs\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": {"x": 0, "y": 0, "w": 24, "h": 10}
    },
    {
      "id": 2,
      "type": "logs",
      "title": "Podman Container Logs",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "{job=\"podman\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": {"x": 0, "y": 10, "w": 24, "h": 10}
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Log Rate by Source",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "sum(rate({job=~\".+\"}[5m])) by (job)",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "logs/sec"
        }
      },
      "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8}
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Total Log Lines (Last Hour)",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "sum(count_over_time({job=~\".+\"}[1h]))",
          "refId": "A",
          "legendFormat": "Log Lines"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "gridPos": {"x": 12, "y": 20, "w": 6, "h": 4}
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Error Rate (/min)",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "sum(rate({job=~\".+\"} |~ \"(?i)(error|fail|exception)\"[1m]))",
          "refId": "A",
          "legendFormat": "Errors/min"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "thresholds": {
        "steps": [
          {"color": "green", "value": null},
          {"color": "yellow", "value": 5},
          {"color": "red", "value": 20}
        ]
      },
      "gridPos": {"x": 18, "y": 20, "w": 6, "h": 4}
    },
    {
      "id": 6,
      "type": "logs",
      "title": "Error Logs (Last 30 minutes)",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "{job=~\".+\"} |~ \"(?i)(error|fail|exception|critical)\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8}
    }
  ]
}