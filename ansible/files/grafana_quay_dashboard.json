{
  "dashboard": {
    "id": null,
    "title": "Red Hat Quay Registry Metrics",
    "tags": ["quay", "registry", "containers"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 0,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Repository Operations Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "value"},
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "targets": [
          {
            "expr": "rate(quay_repository_pulls_total[5m])",
            "legendFormat": "Pulls/sec",
            "refId": "A"
          },
          {
            "expr": "rate(quay_repository_pushes_total[5m])",
            "legendFormat": "Pushes/sec", 
            "refId": "B"
          }
        ]
      },
      {
        "id": 2,
        "title": "Storage Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "min": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1073741824},
                {"color": "red", "value": 5368709120}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "targets": [
          {
            "expr": "quay_storage_usage_bytes",
            "legendFormat": "Storage Used",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Repository Operations Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "color": {"mode": "palette-classic"},
            "unit": "ops",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        },
        "targets": [
          {
            "expr": "rate(quay_repository_pulls_total[5m])",
            "legendFormat": "Repository Pulls/sec",
            "refId": "A"
          },
          {
            "expr": "rate(quay_repository_pushes_total[5m])",
            "legendFormat": "Repository Pushes/sec",
            "refId": "B"
          }
        ]
      },
      {
        "id": 4,
        "title": "Security Scans",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 16},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "targets": [
          {
            "expr": "quay_security_scans_total",
            "legendFormat": "Total Scans",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Build Requests",
        "type": "stat", 
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 16},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "targets": [
          {
            "expr": "rate(quay_build_requests_total[5m])",
            "legendFormat": "Build Requests/sec",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Repository Count",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 16},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto", 
          "textMode": "auto",
          "colorMode": "value"
        },
        "targets": [
          {
            "expr": "quay_repositories_total",
            "legendFormat": "Total Repositories",
            "refId": "A"
          }
        ]
      }
    ]
  }
}