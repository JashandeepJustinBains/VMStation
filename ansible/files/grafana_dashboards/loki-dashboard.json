{
  "schemaVersion": 27,
  "title": "Loki Logs & Aggregation",
  "uid": "loki-logs",
  "tags": ["loki", "logs", "vmstation"],
  "timezone": "browser",
  "editable": true,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Log Volume by Namespace",
      "type": "timeseries",
      "datasource": "Loki",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum by (namespace) (rate({job=\"kubernetes-pods\"}[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "logs/sec",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "lineWidth": 0,
            "showPoints": "never",
            "stacking": {"mode": "normal"}
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["mean", "max"]
        }
      }
    },
    {
      "id": 2,
      "title": "Application Logs",
      "type": "logs",
      "datasource": "Loki",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "{namespace!=\"kube-system\", namespace!=\"kube-flannel\", namespace!=\"monitoring\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "dedupStrategy": "none",
        "enableLogDetails": true
      }
    },
    {
      "id": 3,
      "title": "System Logs (kube-system)",
      "type": "logs",
      "datasource": "Loki",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "{namespace=\"kube-system\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "dedupStrategy": "none",
        "enableLogDetails": true
      }
    },
    {
      "id": 4,
      "title": "Monitoring Stack Logs",
      "type": "logs",
      "datasource": "Loki",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 32},
      "targets": [
        {
          "expr": "{namespace=\"monitoring\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "dedupStrategy": "none",
        "enableLogDetails": true
      }
    },
    {
      "id": 5,
      "title": "Error Log Rate",
      "type": "timeseries",
      "datasource": "Loki",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 44},
      "targets": [
        {
          "expr": "sum by (namespace, pod) (rate({job=\"kubernetes-pods\"} |= \"error\" [5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "errors/sec",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "showPoints": "never"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.1},
              {"color": "red", "value": 1}
            ]
          }
        }
      }
    }
  ],
  "version": 1
}