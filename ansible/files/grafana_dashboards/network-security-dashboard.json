{
  "schemaVersion": 27,
  "title": "Network Security & Analysis",
  "uid": "network-security",
  "tags": ["security", "network", "analysis", "vmstation"],
  "timezone": "browser",
  "editable": true,
  "refresh": "1m",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Network Connectivity Status",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(up)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "green", "value": 10}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto",
        "text": {
          "titleSize": 16,
          "valueSize": 40
        }
      }
    },
    {
      "id": 2,
      "title": "Total Network Errors",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_errs_total[5m])) + sum(rate(node_network_transmit_errs_total[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 10}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 3,
      "title": "Packet Drop Rate",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_drop_total[5m])) + sum(rate(node_network_transmit_drop_total[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "pps",
          "decimals": 2,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 100}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 4,
      "title": "Active TCP Connections",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "sum(node_netstat_Tcp_CurrEstab)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1000},
              {"color": "red", "value": 5000}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 5,
      "title": "Network Traffic (RX/TX)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_bytes_total{device!~\"lo|veth.*|docker.*|br-.*\"}[5m])) by (instance)",
          "legendFormat": "RX - {{instance}}",
          "refId": "A"
        },
        {
          "expr": "sum(rate(node_network_transmit_bytes_total{device!~\"lo|veth.*|docker.*|br-.*\"}[5m])) by (instance)",
          "legendFormat": "TX - {{instance}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Network Packets (RX/TX)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_packets_total{device!~\"lo|veth.*|docker.*|br-.*\"}[5m])) by (instance)",
          "legendFormat": "RX Packets - {{instance}}",
          "refId": "A"
        },
        {
          "expr": "sum(rate(node_network_transmit_packets_total{device!~\"lo|veth.*|docker.*|br-.*\"}[5m])) by (instance)",
          "legendFormat": "TX Packets - {{instance}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "pps",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Network Error Rate by Interface",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "rate(node_network_receive_errs_total{device!~\"lo|veth.*|docker.*|br-.*\"}[5m])",
          "legendFormat": "RX Errors - {{instance}}/{{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_errs_total{device!~\"lo|veth.*|docker.*|br-.*\"}[5m])",
          "legendFormat": "TX Errors - {{instance}}/{{device}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "TCP Connection States",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "expr": "node_netstat_Tcp_CurrEstab",
          "legendFormat": "ESTABLISHED - {{instance}}",
          "refId": "A"
        },
        {
          "expr": "node_sockstat_TCP_tw",
          "legendFormat": "TIME_WAIT - {{instance}}",
          "refId": "B"
        },
        {
          "expr": "node_sockstat_TCP_alloc",
          "legendFormat": "ALLOCATED - {{instance}}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Network Interface Status",
      "type": "table",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "node_network_up{device!~\"lo|veth.*|docker.*|br-.*\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true
            },
            "renameByName": {
              "instance": "Node",
              "device": "Interface",
              "Value": "Status"
            }
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Status"},
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "options": {
                      "0": {"text": "Down", "color": "red"},
                      "1": {"text": "Up", "color": "green"}
                    },
                    "type": "value"
                  }
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "id": 10,
      "title": "DNS Query Rate",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
      "targets": [
        {
          "expr": "rate(coredns_dns_requests_total[5m])",
          "legendFormat": "{{type}} - {{proto}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 11,
      "title": "DNS Response Codes",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
      "targets": [
        {
          "expr": "rate(coredns_dns_responses_total[5m])",
          "legendFormat": "{{rcode}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "showPoints": "never",
            "stacking": {
              "mode": "normal"
            }
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Firewall/iptables Rules Count",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 36},
      "targets": [
        {
          "expr": "sum(node_nf_conntrack_entries)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10000},
              {"color": "red", "value": 50000}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 13,
      "title": "UDP Packets",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 18, "x": 6, "y": 36},
      "targets": [
        {
          "expr": "rate(node_netstat_Udp_InDatagrams[5m])",
          "legendFormat": "UDP In - {{instance}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_netstat_Udp_OutDatagrams[5m])",
          "legendFormat": "UDP Out - {{instance}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "pps",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "showPoints": "never"
          }
        }
      }
    }
  ],
  "version": 1
}
