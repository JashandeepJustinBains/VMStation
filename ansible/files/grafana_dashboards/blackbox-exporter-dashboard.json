{
  "schemaVersion": 27,
  "title": "Network Monitoring - Blackbox Exporter",
  "uid": "blackbox-exporter",
  "tags": ["blackbox", "network", "probes", "vmstation", "security"],
  "timezone": "browser",
  "editable": true,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Probe Success Rate",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "avg(probe_success)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "orange", "value": 0.8},
              {"color": "yellow", "value": 0.95},
              {"color": "green", "value": 0.99}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 2,
      "title": "Total Probes",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "count(probe_success)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "blue", "value": null}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "orientation": "auto"
      }
    },
    {
      "id": 3,
      "title": "Failed Probes",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "count(probe_success == 0)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 3}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 4,
      "title": "Blackbox Exporter Status",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "up{job=\"blackbox-exporter\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {
              "options": {
                "0": {"text": "Down", "color": "red"},
                "1": {"text": "Up", "color": "green"}
              },
              "type": "value"
            }
          ]
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "orientation": "auto"
      }
    },
    {
      "id": 5,
      "title": "Probe Duration (HTTP)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "probe_http_duration_seconds{phase=\"resolve\"}",
          "legendFormat": "DNS Resolution - {{instance}}",
          "refId": "A"
        },
        {
          "expr": "probe_http_duration_seconds{phase=\"connect\"}",
          "legendFormat": "TCP Connect - {{instance}}",
          "refId": "B"
        },
        {
          "expr": "probe_http_duration_seconds{phase=\"tls\"}",
          "legendFormat": "TLS Handshake - {{instance}}",
          "refId": "C"
        },
        {
          "expr": "probe_http_duration_seconds{phase=\"processing\"}",
          "legendFormat": "Processing - {{instance}}",
          "refId": "D"
        },
        {
          "expr": "probe_http_duration_seconds{phase=\"transfer\"}",
          "legendFormat": "Transfer - {{instance}}",
          "refId": "E"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Probe Success by Target",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "probe_success",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 1,
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 30,
            "lineWidth": 2,
            "showPoints": "always",
            "pointSize": 5
          }
        }
      }
    },
    {
      "id": 7,
      "title": "HTTP Status Codes",
      "type": "table",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "probe_http_status_code",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true
            },
            "renameByName": {
              "instance": "Target",
              "Value": "Status Code"
            }
          }
        }
      ],
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Status Code"},
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 300},
                    {"color": "orange", "value": 400},
                    {"color": "red", "value": 500}
                  ]
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 8,
      "title": "SSL Certificate Expiry",
      "type": "table",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "expr": "(probe_ssl_earliest_cert_expiry - time()) / 86400",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true
            },
            "renameByName": {
              "instance": "Target",
              "Value": "Days Until Expiry"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 1
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Days Until Expiry"},
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {"color": "red", "value": null},
                    {"color": "orange", "value": 7},
                    {"color": "yellow", "value": 30},
                    {"color": "green", "value": 60}
                  ]
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 9,
      "title": "DNS Resolution Time",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "probe_dns_lookup_time_seconds",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 10,
      "title": "ICMP Probe Results",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "targets": [
        {
          "expr": "probe_icmp_duration_seconds",
          "legendFormat": "RTT - {{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Probe Failures Over Time",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
      "targets": [
        {
          "expr": "rate(probe_success == 0[5m])",
          "legendFormat": "Failure rate - {{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 30,
            "lineWidth": 2,
            "showPoints": "never"
          }
        }
      }
    }
  ],
  "version": 1
}
