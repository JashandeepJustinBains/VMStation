{
  "schemaVersion": 27,
  "title": "Syslog Analysis & Monitoring",
  "uid": "syslog-analysis",
  "tags": ["syslog", "logs", "security", "vmstation"],
  "timezone": "browser",
  "editable": true,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Total Syslog Messages",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(syslog_messages_total[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "msg/s",
          "decimals": 1,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 2,
      "title": "Critical Messages",
      "type": "stat",
      "datasource": "Loki",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"syslog\"} |~ \"(?i)(critical|crit|fatal|emergency)\" [5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 10}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 3,
      "title": "Error Messages",
      "type": "stat",
      "datasource": "Loki",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"syslog\"} |~ \"(?i)(error|err|failed)\" [5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "orange", "value": 20},
              {"color": "red", "value": 50}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 4,
      "title": "Warning Messages",
      "type": "stat",
      "datasource": "Loki",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"syslog\"} |~ \"(?i)(warning|warn)\" [5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "orange", "value": 50}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 5,
      "title": "Message Rate Over Time",
      "type": "timeseries",
      "datasource": "Loki",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "sum by(level) (rate({job=\"syslog\"} [1m]))",
          "legendFormat": "{{level}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "msg/s",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 30,
            "lineWidth": 2,
            "showPoints": "never",
            "stacking": {
              "mode": "normal"
            }
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Recent Critical & Error Logs",
      "type": "logs",
      "datasource": "Loki",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "{job=\"syslog\"} |~ \"(?i)(critical|crit|error|err|fatal|emergency|failed)\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 7,
      "title": "Messages by Source Host",
      "type": "timeseries",
      "datasource": "Loki",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "targets": [
        {
          "expr": "sum by(hostname) (rate({job=\"syslog\"} [1m]))",
          "legendFormat": "{{hostname}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "msg/s",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Messages by Facility",
      "type": "piechart",
      "datasource": "Loki",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "targets": [
        {
          "expr": "sum by(facility) (count_over_time({job=\"syslog\"} [1h]))",
          "legendFormat": "{{facility}}",
          "refId": "A"
        }
      ],
      "options": {
        "pieType": "pie",
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            }
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Authentication Events",
      "type": "timeseries",
      "datasource": "Loki",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
      "targets": [
        {
          "expr": "sum(rate({job=\"syslog\"} |~ \"(?i)(login|logout|authentication|authorized|unauthorized|ssh|sudo)\" [1m]))",
          "legendFormat": "Auth events",
          "refId": "A"
        },
        {
          "expr": "sum(rate({job=\"syslog\"} |~ \"(?i)(failed|invalid|denied)\" |~ \"(?i)(login|authentication|ssh|sudo)\" [1m]))",
          "legendFormat": "Failed auth",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "msg/s",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Security Events",
      "type": "timeseries",
      "datasource": "Loki",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
      "targets": [
        {
          "expr": "sum(rate({job=\"syslog\"} |~ \"(?i)(firewall|iptables|blocked|denied|refused)\" [1m]))",
          "legendFormat": "Firewall events",
          "refId": "A"
        },
        {
          "expr": "sum(rate({job=\"syslog\"} |~ \"(?i)(attack|intrusion|malware|virus|breach)\" [1m]))",
          "legendFormat": "Threat events",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "msg/s",
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Top 20 Error Messages",
      "type": "table",
      "datasource": "Loki",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 40},
      "targets": [
        {
          "expr": "topk(20, sum by(msg) (count_over_time({job=\"syslog\"} |~ \"(?i)(error|err|failed)\" [1h])))",
          "refId": "A",
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "renameByName": {
              "msg": "Error Message",
              "Value": "Count"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "displayMode": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Count"},
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "gradient-gauge"
              },
              {
                "id": "color",
                "value": {
                  "mode": "thresholds"
                }
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 10},
                    {"color": "red", "value": 50}
                  ]
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 12,
      "title": "Search All Logs",
      "type": "logs",
      "datasource": "Loki",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 50},
      "targets": [
        {
          "expr": "{job=\"syslog\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ],
  "version": 1
}
